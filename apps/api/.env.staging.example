# API (NestJS) — runtime envs (NO secrets in web build)
NODE_ENV=production

# Database (managed in stage/prod)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?schema=public

# JWT
JWT_SECRET=change_me_strong_random
JWT_EXPIRES_IN=1d

# Object Storage (S3 in prod)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=ap-south-1
S3_ACCESS_KEY=__FROM_SECRET_MANAGER__
S3_SECRET_KEY=__FROM_SECRET_MANAGER__
S3_BUCKET=your-prod-bucket
S3_FORCE_PATH_STYLE=false

# API
API_PORT=4000

# Web (Next.js): DO NOT PUT SECRETS
# Next.js reads this at BUILD TIME — set via CI build arg
# NEXT_PUBLIC_API_BASE=https://api.yourdomain.com
